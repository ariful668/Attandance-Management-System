@model StudentManagementSystem.Models.Sections

@{
    ViewData["Title"] = "Edit Section";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-content">
    <div class="container">
        <h2 class="text-center">Edit Section</h2>
        <br /><br />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SectionId" />
                    <div class="form-group">
                        <label asp-for="SectionName" class="control-label"></label>
                        <input asp-for="SectionName" class="form-control" />
                        <span asp-validation-for="SectionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



